<% provide(:title, 'Create category') %>
<h1>Create Category</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.submit "Create my category", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
