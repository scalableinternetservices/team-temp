<% provide(:title, "Log in") %>
<% content_for :head do %>
  <%= stylesheet_link_tag "user_forms" %>
<% end %>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div><a class="navbar-brand" href="/" style="background-color: transparent !important;">Team Temp</a></div>
  <div class="navbar-nav ml-auto">
    <div class="user-bar">
      <span class="usopt"><%= link_to "Login", '/sessions/new', class: "hoftc" %></span>
      <span class="hoftc">|</span>
      <span class="usopt"><%= link_to "Sign up", '/users/new', class: "hoftc" %></span>
    </div>
  </div>
</nav>

<section id="main">
  <div class="container">
    <div class="usrfwrp">
      <h1>Log in</h1>
    </div>
    <div class="usrfc">
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="fldwrp">
          <%= f.label :username %>
          <%= f.email_field :username, class: 'form-control' %>
        </div>
        <div class="fldwrp">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div class="btnwrp">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
      <p>New User? <%= link_to "Sign up now!", '/users/new' %></p>
    </div>
  </div>
</section>